<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#B8D5ED"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单曲"
            android:textSize="20dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/kg_tab_left"
            android:id="@+id/song_select" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌手"
            android:textSize="20dp"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/kg_tab_center"
            android:id="@+id/singer_select" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专辑"
            android:textSize="20dp"
            android:gravity="center"
            android:clickable="true"
            android:background="@drawable/kg_tab_center"
            android:id="@+id/album_select" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件夹"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/kg_tab_right"
            android:clickable="true"
            android:id="@+id/folder_select" />
        </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_player_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_player_queue_mode_all_default"/>
            <TextView
                android:id="@+id/tv_player_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="顺序播放"/>
            <ImageView
                android:id="@+id/iv_player_mode_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:background="@drawable/play_mode_arrow"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/ib_local_music_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/local_music_float_search_icon"
            android:layout_marginLeft="120dp"/>
        <TextView
            android:id="@+id/tv_local_music_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="多选"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"/>
        </LinearLayout>
</LinearLayout>
