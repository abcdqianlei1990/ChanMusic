<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/queue_lv_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ABCDE9"
        android:text="100"
        android:textSize="20dp"/>
    <LinearLayout
        android:id="@+id/queue_lv_item_text_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/queue_lv_item_id"
        android:layout_marginLeft="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/queue_lv_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AAAAAAAAAAAAAA"
            android:textColor="#ABCDE9"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/queue_lv_item_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bbbbbbbb"
            android:textSize="15dp"
            android:textColor="#ABCDE9"
            android:textStyle="normal"/>
    </LinearLayout>
    <ImageButton
        android:id="@+id/queue_lv_item_favor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/queue_lv_item_delete"
        android:background="@mipmap/player_queue_unlike"/>
    <ImageButton
        android:id="@+id/queue_lv_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/player_queue_single"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />
</RelativeLayout>
