<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/header_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下午14:17" />

    <TextView
        android:id="@+id/header_tv_wifi_strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:layout_alignBaseline="@+id/header_tv_time"
        android:layout_alignParentRight="true"
        android:gravity="right"
       />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="90 |"
            android:id="@+id/header_tv_battery_strength"
            android:gravity="right"
            android:layout_toLeftOf="@+id/header_tv_wifi_strength"
            />
    </RelativeLayout>
    <android.support.percent.PercentRelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >
        <ImageView
            android:id="@+id/header_iv_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ktv_share_default_header"
            app:layout_widthPercent="20%"/>
        <ImageView
            android:id="@+id/header_iv_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_toRightOf="@+id/header_iv_1"
            app:layout_widthPercent="20%"/>
        <ImageView
            android:id="@+id/header_iv_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_toRightOf="@+id/header_iv_2"
            app:layout_widthPercent="20%"/>
        <ImageView
            android:id="@+id/header_iv_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_toRightOf="@+id/header_iv_3"
            app:layout_widthPercent="20%"/>
        <ImageView
            android:id="@+id/header_iv_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_toRightOf="@+id/header_iv_4"
            app:layout_widthPercent="20%"/>
        </android.support.percent.PercentRelativeLayout>

</LinearLayout>
